{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "preserve",
    "moduleDetection": "force",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    //"verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    // "strict": true,
    "skipLibCheck": true,
    // "noFallthroughCasesInSwitch": true,
    // "noUncheckedIndexedAccess": true,
    // "noImplicitOverride": true
  }
}
